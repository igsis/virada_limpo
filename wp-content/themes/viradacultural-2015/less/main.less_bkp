}
@font-face {
    font-family: 'Exo';
    src: ~"url('@{icon-font-path}@{virada-bi-font-name}.eot')";
    src: ~"url('@{icon-font-path}@{virada-bi-font-name}.eot?#iefix') format('embedded-opentype')",
         ~"url('@{icon-font-path}@{virada-bi-font-name}.woff') format('woff')",
