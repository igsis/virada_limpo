        margin: 20px 0;
        font-size: 24px;
        line-height: 36px;
    }
    #programacao-search {
        width: 190px;
        @media (min-width: @screen-lg-min) {
            width: 240px;
        }
        @media (max-width: @screen-tablet) {
            width: 100%;
            margin-top: 12px;
        }
    }
    #by-group {
        position: relative;
        .btn {
            width: 108px;
            text-align: left;
            .caret {
                position: absolute;
