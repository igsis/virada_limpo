/*Colors*/
@preto: #101010;
@vermelho: #fb3f2a;

@gray-darker:            lighten(#000, 20%);   // #333
@gray-dark:              lighten(#000, 60%);   // #999
@gray:                   lighten(#000, 80%);   // #ccc
@gray-light:             lighten(#000, 87%);   // #dedede
@gray-lighter:           lighten(#000, 95%);   // #f2f2f2

@brand-primary: @preto;
@brand-accent: @vermelho;
@brand-auxiliar: #fff;
@body-bg: @gray-light;
@text-color: @gray-darker;
@link-color: @brand-primary;
@link-hover-color: @brand-accent;

a:hover {
    text-decoration: none;
}

body.single, body.page {
    background: #fff;
}
body.programacao-single {
    background: @gray-lighter;
}

.navbar {
    border: none;
    .box-shadow(0 1px 1px rgba(0,0,0,.05));
    color: @gray-dark;
}

@navbar-default-toggle-border-color: transparent;
@navbar-default-toggle-hover-bg: transparent;
@navbar-default-toggle-icon-bar-bg: @brand-accent;

/*Typography*/

