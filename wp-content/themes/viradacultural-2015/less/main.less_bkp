/* =Eventos
-------------------------------------------------------------- */
.event {
    h1 {
        margin: 0;
        font-size: 16px;
        line-height: 1.5;
    }
    time {
        .secondary-font();
    }
    .favorite {
        cursor: pointer;
    }
    .favorite:before {
        content: "\e031";
    }
    .favorite:hover:before, .favorite.active:before {
        content: "\e033";
    }
}
.event-grid {
    position: relative;
    float: left;
    width: 20%;
    height: auto;
    padding-bottom: 34px;
    border-right: 1px solid @body-bg;
    border-bottom: 1px solid @body-bg;
    background-color: @gray-lighter;
    img {
        width: 100%
    }
    a {
        color: @brand-auxiliar;
    }
    .event-content {
        overflow: hidden;
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100%;
        border: 34px solid transparent;
        background-color: rgba(0,0,0, .65);
        .transition(all linear .3s);
        &:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -0.25em; /* Adjusts for spacing */
        }
        @media (max-width: @screen-phone) {
            overflow: visible;
            height: auto;
        }
        h1 {
            display: inline-block;
            overflow: hidden;
            text-align: center;
            vertical-align: middle;
            width: 97%;
            @media (max-width: @screen-phone) {
                overflow: visible;
                height: auto;
            }
        }

    }
    .favorite.favorite-wait {
        display: none;
    }
    .favorite {
        position: absolute;
        z-index: 100;
        bottom: 0;
        left: 0;
        padding: 9px;
        color: @brand-auxiliar;
        background-color: @brand-accent;
    }
    .friends-group {
        position: absolute;
        z-index: 100;
        bottom: 0;
        right: 0;
        height: 34px;
        width: 100%;
        padding: 3px 3px 3px 34px;
        text-align: right;
        background-color: @brand-primary;
        color: @brand-auxiliar;
    }
    .event-time {
        position: absolute;
        z-index: 100;
        top: 0;
        right: 0;
        padding: 0 4px;
        color: @brand-auxiliar;
        background-color: @brand-accent;
    }
    &:hover {
        .event-content {
            opacity: 0;
        }
    }
    &.evento-24h {
        .event-content {
            background-color: @gray-dark;
        }
        &:hover {
            opacity: 1;
        }
    }
    &.no-thumb {
        height: 178px;
        background-color: @brand-primary;
        .friends-group {
            background-color: transparent;
        }
        &:hover {
            a {
                color: @brand-primary;
            }
            .event-content {
                opacity: 1;
                background-color: @brand-auxiliar;
            }
            .favorite {
                color: @brand-auxiliar;
            }
        }
    }
}
.event-list {
    border-bottom: 1px solid @body-bg;
    background: #e9e9e9;
    padding: 15px;
    &.evento-24h {
        background: @body-bg;
        border-bottom: 1px solid #f6f6f6;
    }
    @media (max-width: @screen-xs-max) {
        padding: 5px 30px 5px 5px;
    }
    img {
        display: none;
    }
    .event-time {
        float: left;
        width: 10%;
        padding-right: 15px;
        color: @brand-accent;
        @media (max-width: @screen-xs-max) {
            font-size: 12px;
            line-height: 1.5;
            text-align: center;
            min-width:40px;
        }
        .icon {
            vertical-align: middle;
            margin-right: 3px;
        }
    }
    h1 {
        float: left;
        width: 60%;
        padding-left: 15px;
        padding-right: 15px;
        border-left: 1px solid @gray-light;
        border-right: 1px solid @gray-light;
        @media (max-width: @screen-xs-max) {
            font-size: 14px;
            line-height: 1.5;
            max-width: 80%;
        }
    }
    .event-space {
        display: block;
        float: left;
        width: 20%;
        padding-left: 15px;
        padding-right: 15px;
        .secondary-font();
        .icon {
            color: @brand-accent;
            font-size: 16px;
            vertical-align: middle;
            margin-right: 3px;
        }
    }
    .favorite {
        float: right;
        width: 5%;
        padding-left: 15px;
        text-align: center;
        color: @brand-accent;
    }
    &:hover {
        background: #fff;
    }

}

