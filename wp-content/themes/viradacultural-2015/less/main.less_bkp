@font-face {
    font-family: 'Museo Sans';
    src: ~"url('@{icon-font-path}@{auxiliar-n-font-name}.eot')";
    src: ~"url('@{icon-font-path}@{auxiliar-n-font-name}.eot?#iefix') format('embedded-opentype')",
         ~"url('@{icon-font-path}@{auxiliar-n-font-name}.woff') format('woff')",
         ~"url('@{icon-font-path}@{auxiliar-n-font-name}.ttf') format('truetype')",
         ~"url('@{icon-font-path}@{auxiliar-n-font-name}.svg#@{auxiliar-n-font-svg-id}') format('svg')";
    font-weight: normal;
    font-style: normal;
}

@font-size-base:          16px;
@font-size-large:         ceil((@font-size-base * 1.125)); // ~18px
@font-size-small:         ceil((@font-size-base * 0.75)); // ~12px

@font-size-h1:            floor((@font-size-base * 2.25)); // ~36px
@font-size-h2:            floor((@font-size-base * 2)); // ~32px
@font-size-h3:            ceil((@font-size-base * 1.5)); // ~24px
@font-size-h4:            ceil((@font-size-base * 1.25)); // ~20px
@font-size-h5:            @font-size-base;
@font-size-h6:            ceil((@font-size-base * 0.75)); // ~12px


@font-family-sans-serif:  "Exo", Helvetica, Arial, sans-serif;
@font-family-secondary:   "Museo Sans", Verdana, sans-serif;
@line-height-base:        1.5;

@icon-font-path:          "fonts/";

@headings-font-family:    @font-family-sans-serif;
@headings-font-weight:    bold;
@headings-small-color:    @gray-dark;

.secondary-font(){
    font-family: @font-family-secondary;
    font-size: 12px;
    text-transform: uppercase;
}

.icon(){
    font-family: 'ElegantIcons';
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
}

@border-radius-base:        3px;
@border-radius-large:       4px;
@border-radius-small:       2px;

@component-active-color: @brand-auxiliar;
@list-group-link-color: @brand-primary;

@caret-width-base:          5px;
@caret-width-large:         7px;


/* =WordPress
-------------------------------------------------------------- */
.alignright {
    float: right;
}

.alignleft {
    float: left;
}

/* =Virada utilities
-------------------------------------------------------------- */
img, body:not(.page-template-page-dez-anos-php) article.page img {
  .img-responsive();
}

#programacao-loading {
    width: 100%;
    background: transparent url(img/spinner.gif) no-repeat center center;
}

/* =Form
-------------------------------------------------------------- */
@input-bg:                       @gray-lighter;
@input-color:                    @gray-dark;
@input-color-placeholder:        @gray;

.form-control {
    border: none;
    box-shadow: none;
    height: 36px;
    font-family: @font-family-secondary;
    &:focus {
        box-shadow: none;
    }
}

.input-group-addon {
    border: none;
    .icon {
        color: @brand-primary;
    }
}

#pages-search .dropdown-menu {
    background-color: @gray-light;
    a {
        cursor: pointer;
    }
}

/* =Buttons
-------------------------------------------------------------- */
.btn {
    border: none;
    font-family: @font-family-secondary;
    text-transform: uppercase;
    font-size: 14px;
    line-height: 1.7143;
    .icon {
        font-size: @font-size-base;
        vertical-align: middle;
    }
    &:hover, &:active, &.active {
        background-color: @gray-lighter;
        box-shadow: none;
    }
}

.btn-lg {
  // line-height: ensure even-numbered height of button next to large input
  .button-size(@padding-large-vertical; @padding-large-horizontal; @font-size-large; @line-height-large; @border-radius-large);
  .icon {
    font-size: @font-size-base;
  }
}
.btn-sm {
  // line-height: ensure proper height of button next to small input
  .button-size(@padding-small-vertical; @padding-small-horizontal; @font-size-small; @line-height-small; @border-radius-small);
  .icon {
    font-size: @font-size-small;
  }
}
.btn-xs {
  .button-size(@padding-xs-vertical; @padding-xs-horizontal; @font-size-small; @line-height-small; @border-radius-small);
  .icon {
    font-size: @font-size-small;
  }
}

@btn-default-color:              @brand-accent;
@btn-default-bg:                 @gray-light;

@btn-primary-color:              @brand-auxiliar;
@btn-primary-bg:                 @brand-accent;
.btn-primary {
    &:hover {
        background-color: @brand-primary;
    }

}

@btn-secondary-color:            @gray;
.btn-secondary {
    .button-variant(@btn-secondary-color; @btn-default-bg; @btn-default-border);
    &:hover, &:active, &.active, &:focus {
        color: @gray-dark;
    }

}

.dropdown-menu {
    border: none;
}

.tooltip-inner {
    .secondary-font();
}

/* =Tables
-------------------------------------------------------------- */
table {
    font-size: 12px;
    font-family: @font-family-secondary;
}
article.page table, article.post table {
    .table();
    .table-condensed();
    .table-striped();
}

/* =Layout
-------------------------------------------------------------- */

.fixed-bars(){
    position: fixed;
    z-index: 1040;
    top: 0;
    bottom: 0;
    background-color: @gray-lighter;
}

.container-menu-minified {
    @media (max-width: @screen-xs-max) {
        margin-left: 0;
    }
    @media (min-width: @screen-sm-min) and (max-width: @screen-sm-max) {
      margin-left: 0;
    }
    @media (min-width: @screen-md-min) and (max-width: @screen-md-max) {
        margin-left: 115px;
    }
    @media (min-width: @screen-lg-min) {
        margin-left: 115px;
    }
}

.container-menu-large {
    @media (max-width: @screen-xs-max) {
        margin-left: 0;
        margin-right: 0;
    }
    @media (min-width: @screen-sm-min) and (max-width: @screen-sm-max) {
        margin-left: 0;
