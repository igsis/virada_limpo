/* =Post
-------------------------------------------------------------- */
article.post, article.noticias, article.imprensa, article.page, article.event-single, article.space-single, article.type-twitter_cpt, article.type-instagram_cpt {
    header p, footer {
            .secondary-font();
            color: @gray-dark;
        }
    header { text-align: center; }
}
footer {
    .friends-group {
        border-top: 1px solid @gray-light;
        margin-bottom: 4*@padding-base-horizontal;
        padding-top: @padding-base-horizontal;
        line-height: 28px;
        height: 30px+@padding-base-horizontal;
    }
}
.post-type-icon {
    position: relative;
    background: @brand-accent;
    border-radius: 18px;
    height: 36px;
    width: 36px;
    margin: 0 auto 12px;
    padding: 6px;
    text-align: center;
    line-height: 36px;
    .icon {
        color: @brand-auxiliar;
        vertical-align: middle;
        display: block;
        font-size: 14px;
        line-height: 24px;
    }
}
.grid-post {
    overflow: hidden;
    text-align: center;
    background-color: @gray-lighter;
    border-right: 1px solid @body-bg;
    border-bottom: 1px solid @body-bg;
    .transition(background linear .3s);
    font-size: 14px;
    line-height: 24px;
    .post-content {
        position: relative;
        height: auto;
        padding: 24px 15px;
        h1 {
            font-size: @font-size-base;
            line-height: 1.5;
            margin: 0;
            height: 48px;
            overflow: hidden;
        }
        >p {
            height: auto;
            margin-bottom: 0;
            overflow: hidden;
        }
    }

    &.has-thumbnail {
        .post-content {
            height: 222px;
            padding-top: 0;
            >p {
                height: 72px;
                margin-bottom: 0;
                overflow: hidden;
            }
        }
        .post-type-icon {
            margin-top: -18px;
        }
    }
    &.type-instagram_cpt{
        p {
            margin: 0;
        }
        .post-type-icon {
            margin-top: -18px;
        }
        footer {
            padding: 0 15px 24px;
        }
    }
    &.type-twitter_cpt{
        .post-content{
            height: auto;
        }
    }
    .post-img {
        position: relative;
        border-bottom: 3px solid @brand-accent;
        .post-img-cover {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba(0,0,0,.3);
            .transition(all linear .3s);
        }
    }
    &:hover {
        background-color: #fff;
        .post-img-cover {
            background-color: rgba(0,0,0,0);
        }
    }
}

/* =Programação
-------------------------------------------------------------- */
.virada-navbar {
