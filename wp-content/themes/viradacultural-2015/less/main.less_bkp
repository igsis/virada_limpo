}
.programacao-home #main-footer {
    margin-left: 115px;
    margin-right: 0;
    @media (max-width: @screen-phone) {
        margin-left: 0;
    }
}


/* =Countdown
-------------------------------------------------------------- */
#countdown {
    .fixed-bars();
    .box-shadow(0 0 6px 0 rgba(0,0,0,.3));
    right: 0;
    padding-top: 24px;
    color: #ccc;
    text-align: center;
    font-family: @font-family-secondary;
    font-size: 14px;
    width: 225px;
    > div:first-child {
        font-size: 22px;
        line-height: 48px;
        margin-bottom: 24px;
    }
    > div:nth-child(2n+1){
        margin-bottom: 24px;
    }

    .circle {
        /*border-radius: 36px;*/
        /*margin: 0 auto;*/
        /*width: 72px;*/
        /*height: 72px;*/
        line-height: 64px;
        /*border: 6px solid #ccc;*/
        font-family: @font-family-sans-serif;
        font-size: 30px;
        font-weight: bold;
        &.days {
            border-top-color: @brand-accent;
            color: @brand-accent;
        }
        &.hours {
            border-bottom-color: @brand-accent;
            color: @brand-accent;
        }
        &.minutes {
            border-left-color: @brand-accent;
            color: @brand-accent;
        }
    }

        .countdown-text{
            margin-top: -72px;
            margin-bottom: 6px;
        }

    footer {
     position: absolute;
     left: 0;
     bottom: 24px;
     padding: 48px 15px 0;
     width: 100%;
     background: url(img/icone-countdown.png) no-repeat top center;
        time {
            font-family: @font-family-sans-serif;
            line-height: 1;
            display: block;
            width: 60%;
            margin: 0 auto;
            padding-bottom: 1.5rem;
            div:first-child {
                font-size: 30px;
                color: @brand-primary;
                font-weight: bold;
                letter-spacing: 2px;
            }
            div:nth-child(2) {
                font-size: 33px;
                color: @brand-primary;
                letter-spacing: 1px;
            }
            div:last-child {
                font-size: 36px;
                color: @brand-accent;
                font-weight: bold;
                letter-spacing: 2px;
            }
        }
        .icon {
            font-size: 24px;
            color: #ccc;
            &:hover {
                text-decoration: none;
                color: @brand-accent;
            }
        }
    }
}

/* =Carousel
-------------------------------------------------------------- */
@carousel-indicator-border-color: @gray-lighter;
@carousel-indicator-active-bg: @brand-primary;

/* =Front-page Carousel
-------------------------------------------------------------- */
#front-page-carousel {
    border: 1px solid @body-bg;
    border-top: none;
    @media (min-width: @screen-phone) {
        .carousel-control {
            display: none;
        }
    }
    .carousel-inner {
        .item {
            overflow:hidden;
        }
    }
    .carousel-control {
        background-image: none;
        .opacity(1);
        text-shadow: none;
        font-size: 32px;
        width: 32px;
        &.left {
            left: 6px;
        }
        &.right {
            right: 6px;
        }
        .icon {
            position: absolute;
            top: 50%;
            margin-top: -28px;
            z-index: 5;
            display: inline-block;
            color: @brand-accent;
        }
        .arrow_carrot-left_alt {
            left: 0;
        }
        .arrow_carrot-right_alt {
            right: 0;
        }
    }
    .carousel-caption {
        text-shadow: none;
        background: @brand-accent;
        bottom: 72px;
        left: 40%;
        right: 0;
        text-align: right;
        padding: 24px;
        h1 {
            margin: 0;
            font-size: 32px;
            a {
                color: @brand-auxiliar;
            }
        }
        &:hover {
            background: @brand-auxiliar;
            h1 a {
                color: @brand-primary;
            }
        }
        @media (max-width: @screen-phone) {
            left: 0;
            bottom: 0;
            text-align: center;
            padding: 6px;
            h1 {
                font-size: 16px;
                line-height: 24px;
                //height: 24px;
                //overflow: hidden;
            }
        }

    }
    .carousel-indicators {
        left: auto;
        right: 24px;
        width: auto;
        li {
            background-color: @gray;
            border: none;
            &.active{
                 background-color: @brand-accent;
            }
        }
        @media (max-width: @screen-phone) {
            display: none;
        }
    }
}

/* =Friends
-------------------------------------------------------------- */
