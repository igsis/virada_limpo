    .time-range {
        float: left;
        display: inline-block;
        width: 54px;
        height: 36px;
        line-height: 36px;
        color: @gray-dark;
        text-align: center;
        font-size:.9em;
        margin:0;
    }
    .ngrs-range-slider {
        height: 12px;
        width: 100%;
        margin: 8px 0 0;
        padding: 0;
        border: none;
        border-radius: 12px;
        background: #fff;
        &:focus {
            .box-shadow(none);
        }
        .box-shadow(none);
        .ngrs-join {
            background-color: @gray;
            background-image: none;
            top: 0;
