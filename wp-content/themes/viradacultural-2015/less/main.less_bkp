    }
}
.space-single {
    .timeline {
        width: 520px;
        @media (max-width: @screen-xs-min) {
            width: 260px;
        }
        margin-bottom: 48px;
        .center-block();
        .event-group {
            position: relative;
            clear: both;
            float: right;
            width: 260px;
            border-left: 2px solid @brand-accent;
            .timeline-time {
                position: absolute;
                z-index: 100;
                top: 6px;
                left: -23px;
                width: 46px;
                padding: 3px;
                .secondary-font();
                color: @brand-auxiliar;
                background: @brand-accent;
                text-align: center;
                border-radius: @border-radius-base;
            }
            .event-grid {
                overflow: hidden;
                float: none;
                width: 225px;
                padding-bottom: 0;
                /*padding-top: 34px;*/
                border-right: none;
                margin-left: 33px;
                .event-content {
                    background-color: @brand-primary;
                    bottom: initial;
                    position:initial;
                    border: none;
                    padding: 5px;
                    min-height: 36px;

                }
                &:before {
                    .icon();
                    /*content: "\44";*/
                    left: -18px;
                    display: block;
                    position: absolute;
                    top: 0;
                    font-size: 36px;
                    color: @brand-primary;
                }
                &.evento-24h:before {
                    color: @gray-dark;
                }
                &.no-thumb {
                    .event-content {
                        height: 178px;
                        bottom: 0;
                    }
                }
                &:hover {
                    .event-content {
                        top: 0;
                        opacity: 1;
                        background-color: @brand-auxiliar;
                        color: @brand-primary;
                    }
                    &:before {
                        color: @brand-auxiliar;
                    }
                }

            }
            @media (max-width: @screen-xs-min) {
                .event-grid {
                    margin-bottom: 24px;
                }
            }
            &:first-child {
                margin-top: 0;
            }
            &:last-child {
                padding-bottom: 48px;
                .event-time {
                    bottom: 60px;
                }
            }
            @media (min-width: @screen-xs-min) {
                &:nth-child(odd){
                    float: left;
                    border-right: 2px solid @brand-accent;
                    border-left: none;
                    margin-left: 2px;
                    .timeline-time {
                        right: -23px;
                        left: auto;
                    }
                    .event-grid {
                        margin-right: 35px;
                        margin-left: 0;
                        &:before {
/*                            content: "\45";*/
                            right: -18px;
                            left: auto;
                        }
                    }
                }
            }
        }
    }

}

