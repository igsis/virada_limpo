    img {
      margin: 0 auto;
      &.hacklab {
        display: inline-block;
        height: 9px;
        margin: -6px 5px 0 5px;
        vertical-align: middle;
        width: auto;
      }
      &.instituto-tim {
        display: inline-block;
        height: 11px;
        margin: -3px 5px 0 5px;
        vertical-align: middle;
      }
