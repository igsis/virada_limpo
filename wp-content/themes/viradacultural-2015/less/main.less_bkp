@panel-bg:                    transparent;
@panel-body-padding:          0;
@panel-border-radius:         0;

@panel-default-text:          @gray-darker;

@panel-default-heading-bg:    @gray-lighter;

#main-section.panel-group {
    margin-top: 6px;
    padding: 0;
    .panel {
        border: none;
        .panel-heading {
            font-size: ceil((@font-size-base * 1.125));
            a {
                color: @brand-primary;
                >.icon {
                    color: @gray-dark;
                }
            }
        }
        .panel-title {
            line-height: 1.5;
        }
        .panel-collapse {
            position: relative;
            .program-nav {
                position: absolute;
                z-index: 1000;
                display: none;
                top: 0;
                bottom: 0;
                width: 50px;
                cursor: pointer;
                background-color: @brand-auxiliar;
                &:before {
                    content: '';
                    display: inline-block;
                    height: 100%;
                    vertical-align: middle;
                    margin-right: -0.25em; /* Adjusts for spacing */
                }
                &.program-nav-left {
                    left: 0;
                }
                &.program-nav-right {
                    right: 0;
                }
                .icon {
                    color: @brand-accent;
                    display: inline-block;
                    font-size: 52px;
                    vertical-align: middle;
                }
            }
            &:hover {
                .program-nav {
                    display: block;
                }
                .program-nav.disabled {
                    display: none;
                }
            }
        }
    }
}

